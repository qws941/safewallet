# Database
POSTGRES_USER=safetywallet
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=safetywallet
DATABASE_URL=postgresql://safetywallet:your_secure_password_here@localhost:5432/safetywallet

# Redis
REDIS_URL=redis://localhost:6379

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_secure_password_here
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_secure_password_here
MINIO_BUCKET=safetywallet

# JWT
JWT_SECRET=your_jwt_secret_here_at_least_32_chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security
HMAC_SECRET=your_hmac_secret_at_least_32_chars
ENCRYPTION_KEY=your_encryption_key_at_least_32_chars

# SMS API (for OTP - deprecated)
SMS_API_KEY=your_sms_api_key_here
SMS_API_SECRET=your_sms_api_secret_here
SMS_SENDER=your_registered_sender_number

# Application URLs
API_URL=http://localhost:3002
WORKER_APP_URL=http://localhost:3000
ADMIN_APP_URL=http://localhost:3001

# Docker (for production)
GITHUB_REPOSITORY=your-org/safetywallet
TAG=latest
