{
  "name": "api-worker",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --env=\"\" --dry-run --outdir=dist",
    "typecheck": "tsc --noEmit",
    "deploy": "node -e \"console.error('Manual deploy is disabled. Deployment is controlled by GitHub Actions (git-ref based).'); process.exit(1)\"",
    "test": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply safework2-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply safework2-db --remote",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@safetywallet/types": "*",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "jpeg-js": "^0.4.4",
    "mysql2": "^3.17.2",
    "piexifjs": "^1.0.6",
    "sql.js": "^1.14.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "drizzle-kit": "^0.31.9",
    "typescript": "^5.7.0",
    "wrangler": "^4.66.0"
  }
}
